<div class="row mt-5 pt5 justify-content-center">
  <div class="col col-sm-9 col-md-7 col-xl-6">
    <div class="card">
      <div class="card-body">
        <h2 class="text-center ">Registre-se</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :password, 'Senha', class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, 'Confirme sua senha', class: 'form-label'  %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <%= f.submit "Cadastrar", class: 'btn btn-primary mb-3' %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
